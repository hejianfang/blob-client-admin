{
    "defaultSeverity": "warning",
    "extends": [
        "tslint:recommended"
    ],
    "linterOptions": {
        "exclude": [
            "node_modules/**"
        ]
    },
    "rules": {
        "indent": [
            true,
            "spaces",
            2
        ],
        "interface-name": false,
        "no-consecutive-blank-lines": false,
        "object-literal-sort-keys": false,
        "ordered-imports": false,
        "no-console": false,
        "quotemark": [
            true,
            "single"
        ],
        "prefer-const": [
            false,
            {
                "destructuring": "all"
            }
        ],
        "align": [
            true,
            "parameters",
            "statements"
        ],
        "comma-dangle": [
            "error",
            "only-multiline"
        ],
        "no-shadowed-variable": false
    }
}