{
    "defaultSeverity": "warning",
    "extends": [
        "tslint:recommended"
    ],
    "linterOptions": {
        "exclude": [
            "node_modules/**"
        ]
    },
    "rules": {
        "indent": [
            true,
            "spaces",
            2
        ],
        "interface-name": false,
        "no-consecutive-blank-lines": false,
        "object-literal-sort-keys": false,
        "ordered-imports": false,
        "no-console": false,
        // "comma-dangle": [
        //     2,
        //     "never"
        // ],
        "quotemark": [
            true,
            "single"
        ],
        "align": [
            true,
            "parameters",
            "statements"
        ]
    }
}